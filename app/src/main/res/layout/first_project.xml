<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstProject">

    <ImageView
        android:src="@drawable/krustycrab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/first_text"
        android:text="@string/the_krusty_krab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/second_text"
        android:text="@string/the_best_fast_food_in_bikini_botom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/first_text"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:text="@string/adress_bikini_bottom_9a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/second_text"/>


    <TextView
        android:text="@string/menu_krubsburger_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:src="@drawable/burger"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>